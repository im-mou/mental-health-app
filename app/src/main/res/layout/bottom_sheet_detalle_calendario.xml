<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_layout"
    android:padding="30dp"
    >
 <!--   <TextView
        android:id="@+id/cal_detail_sheet_preheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helveticaneue"
        android:textFontWeight="800"
        android:textSize="14sp"
        android:text="@string/journal_details"
        />-->
    <TextView
        android:id="@+id/cal_detail_sheet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helveticaneue"
        android:textFontWeight="800"
        android:textSize="24sp"
        android:paddingVertical="20dp"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="0dp"
        app:cardCornerRadius="24dp"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/cal_details_sheet_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="26sp"
            android:fontFamily="@font/helveticaneue"
            android:textFontWeight="800"
            android:gravity="center"
            android:paddingVertical="30sp"
            />

    </androidx.cardview.widget.CardView>


    <ListView
        android:id="@+id/calendar_dates_list"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="60sp" />

</LinearLayout>